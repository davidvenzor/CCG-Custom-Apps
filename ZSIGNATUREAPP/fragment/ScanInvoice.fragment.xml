<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
    <Dialog
        id="oDialogScanInvoices"
		title="Invoice " 
        >
        <content>
        <VBox class="sapUiSmallMargin">
           <Label text="Sales Order number"/>
            <Input id="ScanInvoice_SortID"></Input>
        </VBox>

        </content>
        <beginButton>
        <Button type="Emphasized" text="Submit" press="handleSubmitScanPress" />
                
        </beginButton>
        <endButton>
        <Button text="Close" press="handleCloseScanPress" />
        </endButton>
        
    </Dialog>
</core:FragmentDefinition>
